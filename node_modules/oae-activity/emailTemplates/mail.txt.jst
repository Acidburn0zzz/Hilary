<%
    var greeting = util.i18n.translate('__MSG__ACTIVITY_EMAIL_GREETING__', {'name': util.html.encodeForHTML(user.displayName)});
    greeting = util.html.toText(greeting, false);

    var summary = util.html.toText(getEmailSummary(user, activities), false);
%>

<%= greeting %>
<%= summary %>
<% _.each(activities, function(activity) { %>
    - <%= util.html.toText(util.html.ensureLinksStartWith(util.i18n.translate(activity.summary.i18nKey, activity.summary.i18nArguments), baseUrl), true) %><% }); %>
